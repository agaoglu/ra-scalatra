-@ val idnErr:String = ""
-@ val passErr:String = ""
-@ val formErr:String = ""

p Please enter your identification number and password
form#query(method="post" onsubmit="sb()")
  table(border="0" cellpadding="3" cellspacing="0")
    tr
      th
        label(for="idn") ID Number
      td
        input#idn(type="text")
    tr
      th
        label(for="pass") Password
      td
        input#pass(name="pass" type="password")
  p
    input(type="submit")
  p.err= formErr
:javascript
  function sb() {
    document.getElementById('query').setAttribute("action", "/r/"+document.getElementById("idn").value);
  }
